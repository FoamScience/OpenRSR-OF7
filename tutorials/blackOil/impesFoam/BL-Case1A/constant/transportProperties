FoamFile
{
  version     2.0;
  format      ascii;
  class       dictionary;
  location    "constant";
  object      transportProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

phases (water oil);

rock
{
    incompressibe true;
    compressibility [-1 1 2 0 0 0 0] 1e-6;
    porosity   [0 0 0 0 0 0 0] 0.5;
    permeability [0 2 0 0 0 0 0] 1e-11;
}


water
{
    phaseType       blackoil;
    incompressible  true;
    rhoSc           rhoSc [ 1 -3 0 0 0 0 0 ] 1e3;
    mu0             mu0 [ 1 -1 -1 0 0 0 0 ] 1e-3;
}
	
oil
{
    phaseType       blackoil;
    incompressible  true;
    rhoSc           rhoSc [ 1 -3 0 0 0 0 0 ] 1;
    mu0             mu0 [ 1 -1 -1 0 0 0 0 ] 1.76e-5;
}

krModel<water,oil>
{
    type BrooksCorey;

    water.alphaIrr 0;
    water.krMax    1;

    oil.alphaRes   0.0001;
    oil.krMax      1;

    water.m        3;
    oil.m          3;
}

pcModel<water,oil>
{
    type            tabular;
    pcData
    {
        file            "pc.data";
    }
}

